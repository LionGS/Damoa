<table class="table table-striped">
  <thead>
    <tr>
      <th width="10%">#</th>
      <th width="30%">제목</th>
      <th width="40%">내용</th>
      <th width="20%">출처</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%=@post_no%></td>
      <td><a href="<%=post.link%>"><%=truncate post.title, length: 30%></a></td>
      <td><%= truncate post.posttext, length: 60 %></td>
      <td><%=post.post_attribute%></td>
    </tr>
    <%@post_no = @post_no+1%>
    <%end%>
  </tbody>
</table>
