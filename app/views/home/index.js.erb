// Append new data
$("<%=j render 'data', posts: @posts %>")
    .appendTo($("#infinite_scroll"));

// Update pagination link
<% if @posts.results.last_page? %>
$('.pagination').html("That's all, folks!");
<% else %>
$('.pagination')
    .html("<%=j link_to_next_page(@posts.results, 'Next Page', :remote => true) %>");
<% end %>