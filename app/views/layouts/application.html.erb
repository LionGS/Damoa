<!DOCTYPE html>
<html>
  <head>
    <title>Damoa</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-image: url(bgi.jpg) ; background-attachment: fixed">
    <div class="container px-5 py-5">
      <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <a href="#" data-dismiss="alert" class="close">×</a>
            <ul>
              <li>
                <%= value %>
              </li>
            </ul>
          </div>
      <% end %>

          <div class="header clearfix py-auto">
            <nav class="navbar navbar-toggleable-md navbar-light">
              <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
                <%= link_to "Damoa", root_path, class: 'navbar-brand' %>
              <div class="collapse navbar-collapse" id="navbar">
                <ul class="nav nav-pills mr-auto float-right">
                  <li class="nav-item my-3">
                    <h3>
                      <%= link_to "Home", root_path, class: current_page?(root_path) ? 'nav-link active' : 'nav-link' %>
                    </h3>
                  </li>
                  <% if !user_signed_in? %>
                    <li class="nav-item my-3">
                      <h3>
                        <%= link_to "회원가입", new_user_registration_path, class: current_page?(new_user_registration_path) ? 'nav-link active' : 'nav-link' %>
                      </h3>
                    </li>
                  <% else %>
                    <li class="nav-item my-3">
                      <h3>
                        <%= link_to "회원정보수정", edit_user_registration_path, class: current_page?(edit_user_registration_path) ? 'nav-link active' : 'nav-link' %>
                      </h3>
                    </li>
                  <% end %>
                  <li class="nav-item my-3">
                    <h3>
                      <% if user_signed_in? %>
                        <%= link_to "로그아웃", destroy_user_session_path, method: :delete, data: { confirm: "로그아웃 하시겠습니까?" } ,class: "nav-link" %>
                      <% else %>
                        <%= link_to "로그인", new_user_session_path, class: current_page?(new_user_session_path) ? 'nav-link active' : 'nav-link' %>
                      <% end %>
                    </h3>
                  </li>
                </ul>
              </div>
            </nav>

          </div>


          <%= yield %>

          <footer class="footer">
            <p>© Damoa 2017</p>
          </footer>

        </div>
  </body>
</html>
