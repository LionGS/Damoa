= devise_error_messages!
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .row.uniform
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.label :email
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.email_field :email, autofocus: true, :placeholder => "Email address"
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.text_field :username, :placeholder => "닉네임"
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.label :password
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.password_field :password, autocomplete: "off", :placeholder => @minimum_password_length.to_s+"자 이상"
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.password_field :password_confirmation, autocomplete: "off", :placeholder =>"비밀번호 확인"
    %div{:class => "4u$ 6u$(medieum) 12u$(small)"}
      = f.submit "Sign up"
  = render "devise/shared/links"