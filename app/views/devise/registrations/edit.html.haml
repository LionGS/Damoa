= devise_error_messages!
%main
  %input#tab1{:checked => "checked", :name => "tabs", :type => "radio"}/
  %label{:for => "tab1"} 태그수정
  %input#tab2{:name => "tabs", :type => "radio"}/
  %label{:for => "tab2"} 비밀번호 수정
  %input#tab3{:name => "tabs", :type => "radio"}/
  %label{:for => "tab3"} 회원탈퇴
  %section#content1
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.label :tag_list, "관심 키워드"
      = f.text_area :tag_list, value: resource.tag_list.join(", "), :rows => "5"
      = f.submit "수정완료"
  %section#content2
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.label :password,"현재 비밀번호"
      = f.password_field :current_password, autocomplete: "off"
      = f.label :password ,"새로운 비밀번호"
      - if @minimum_password_length
        %em
          최소 #{@minimum_password_length}자 이상
        %br/
      = f.password_field :password, autocomplete: "off"
      = f.label :password_confirmation ,"비밀번호 확인"
      = f.password_field :password_confirmation, autocomplete: "off"
      = f.submit "수정완료"
  %section#content3
    = button_to "회원탈퇴", registration_path(resource_name), data: { confirm: "정말 탈퇴하시겠습니까? 모든 정보는 소멸됩니다." }, method: :delete
