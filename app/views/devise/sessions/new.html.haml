= devise_error_messages!
%h2 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row.uniform
    %div{:class => "4u$"}
      = f.label :email
    %div{:class => "4u$"}
      = f.email_field :email, autofocus: true, :class => "4u$", :placeholder => "Email address"
    %div{:class => "4u$"}
      = f.label :password
    %div{:class => "4u$"}
      = f.password_field :password, autocomplete: "off", :class => "12u$", :placeholder => "Password"
    %div{:class => "4u$"}
      - if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me
    %div{:class => "4u$"}
      = f.submit "Log in"
= render "devise/shared/links"
