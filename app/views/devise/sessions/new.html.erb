<%= devise_error_messages! %>
<div class="container col-6">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"}) do |f| %>
    <%= f.label :email, :class => "sr-only" %>
    <%= f.email_field :email, autofocus: true, :class => "form-control my-3", :placeholder => "Email address" %>
    <%= f.label :password, :class => "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control my-3", :placeholder => "Password"%>
    <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
    <% end %>
    <%= f.submit "Log in", :class => "btn btn-lg btn-primary btn-block my-3" %>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
